<h1>ユーザー管理画面</h1>
<p><%= notice %></p>

<%= link_to '新規ユーザー作成', new_admin_user_path %>


<table>
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>タスク数</th>
    <th>管理者</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <th><%= user.admin %></th>

      <td><%= link_to t('詳細'), admin_user_path(user.id) %></td>
      <td><%= link_to t('編集'), edit_admin_user_path(user.id) %></td>
      <td><%= link_to t('削除'), admin_user_path(user.id), method: :delete %></td>
    </tr>
  <% end %>
</table>
